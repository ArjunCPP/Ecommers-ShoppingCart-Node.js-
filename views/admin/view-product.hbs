<section>
    <div class="container">
        <div class="mt-4">
          <a href="/admin/add-product" class="btn btn-primary ml-auto">Add product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each product}}
    <tr>
      <th scope="row"></th>
      <td>{{this.Name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ??')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>